# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# Database Settings
DB_NAME=business_management
DB_USER=postgres
DB_PASSWORD=your-secure-db-password
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://postgres:your-secure-db-password@db:5432/business_management

# Redis Settings
REDIS_URL=redis://redis:6379/0
CACHE_URL=redis://redis:6379/1

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Media Files
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-if-using-sentry

# Performance
WEB_CONCURRENCY=3
MAX_MEMORY_PER_WORKER=512MB

# Monitoring
ENABLE_MONITORING=True
HEALTH_CHECK_TOKEN=your-health-check-token
